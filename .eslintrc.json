{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:@next/next/recommended",
    "next"
  ],
  "plugins": ["simple-import-sort", "testing-library"],
  "rules": {
    "prefer-const": "error",
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "react/function-component-definition": [
      "error",
      { "namedComponents": "arrow-function" }
    ],

    // simple-import-sort
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          // 1. Side effect imports
          ["^\\u0000"],
          // 2. React and React Native imports
          ["^react$", "^react/"],
          // 3. Any other 3rd party imports
          ["^@?\\w"],
          // 4. Our modules, other than the module the current file is part of
          ["^@/config?\\w", "^@/components?\\w", "^@/redux?\\w"],
          // 5. Other parts of the same module that the current file is part of (relative import)
          ["^\\."],
          // 6. Styles
          ["^\\./styles"],
          // 7. Types
          ["^.*\\u0000$"]
        ]
      }
    ],
    "simple-import-sort/exports": "error",

    // testing-library
    "testing-library/consistent-data-testid": [
      "error",
      {
        "testIdAttribute": ["data-testid"],
        "testIdPattern": "^(input|button|text|container|list|item)(__[a-z]*[0-9]?)?$"
      }
    ],

    // Props name control
    "react/boolean-prop-naming": [
      "error",
      { "rule": "^(is|has)[A-Z]([A-Za-z0-9]?)+" }
    ]
  }
}
